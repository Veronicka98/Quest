<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:elevation="24dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

        <TextView
                android:id="@+id/questName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textSize="30sp"/>

        <TextView
                android:id="@+id/questDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/questName"/>

        <TextView
                android:id="@+id/questTownland"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/questDate"/>

        <TextView
                android:id="@+id/questCountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/questTownland"/>

        <TextView
                android:id="@+id/questLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/questCountry"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>