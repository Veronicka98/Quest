<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_margin="8dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/imageIcon"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:background="@drawable/hillfort_placeholder" android:contentDescription="@string/hillfortImage"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/hint_questName"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:id="@+id/questName"/>

            <TextView
                    android:id="@+id/questTownland"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_questTownland"
                    android:textColor="#555" android:layout_marginBottom="4dp"/>

            <TextView
                    android:id="@+id/questDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#555"/>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>